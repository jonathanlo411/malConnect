{
    "manifest_version": 3,
    "name": "malConnect",
    "description": "MAL Linking Tool",
    "version": "0.1",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "scripting",
        "nativeMessaging"
    ],
    "host_permissions": [
        "https://api.mangadex.org/*",
        "https://myanimelist.net/anime/*",
        "https://myanimelist.net/manga/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://myanimelist.net/anime/*"],
            "js": ["scripts/loadAnime.js"]
        },
        {
            "matches": ["https://myanimelist.net/manga/*"],
            "js": ["scripts/loadManga.js"]
        }
    ]
}